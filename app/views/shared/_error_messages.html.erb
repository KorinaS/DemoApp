<% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@tweet.errors.count, "error") %> </h3>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>